.contents.row
  .container
    = form_for [@post] do |f|
      /
        \/tweetsにpostメソッドでリクエストする
        送信した際ハッシュオブジェクトparamsにnameのキーとバリューが入る
      %h3
        投稿する
      = f.text_field :title, :name => "title", :placeholder => "title"
      = f.text_area :text, :cols => "30", :name => "text", :placeholder => "text", :rows => "10"
      = f.submit "Send", class: "submit-btn"